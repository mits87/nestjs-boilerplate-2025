{
  "name": "nestjs-boilerplate-2025",
  "version": "0.0.1",
  "description": "NestJS boilerplate 2025",
  "author": "mits87",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=22.14",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "pnpm": ">= 10.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0 --fix",
    "start:dev": "dotenvx run -- nest start --watch",
    "start:debug": "dotenvx run -- nest start --debug --watch",
    "start:prod": "dotenvx run -- node dist/main",
    "start:repl": "npm run start:dev --entryFile repl",
    "start": "dotenvx run -- nest start",
    "test": "jest -w2",
    "test:ci": "npm run test:unit --reporters=default",
    "test:cov": "npm run test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run test --config './jest.e2e.config.js'",
    "test:unit": "npm run test --config './jest.config.js'",
    "test:watch": "npm run test --watch"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.44.1",
    "@nestjs/common": "^11.1.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.1",
    "@nestjs/swagger": "^11.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nestjs-pino": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.1",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.11.24",
    "@swc/jest": "^0.2.38",
    "@tsconfig/node22": "^22",
    "@types/express": "^5",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22",
    "@types/passport-jwt": "^4.0.1",
    "@types/serve-favicon": "^2.5.7",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^16.1.0",
    "jest": "29.7.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "29.3.4",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "packageManager": "pnpm@10.11.0"
}
