{
  "name": "nestjs-boilerplate-2025",
  "version": "0.0.1",
  "description": "NestJS boilerplate 2025",
  "author": "mits87",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=24",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "pnpm": ">= 10.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0 --fix",
    "start:dev": "dotenvx run -- nest start --watch",
    "start:debug": "dotenvx run -- nest start --debug --watch",
    "start:prod": "dotenvx run -- node dist/main",
    "start:repl": "npm run start:dev --entryFile repl",
    "start": "dotenvx run -- nest start",
    "test": "jest -w2",
    "test:ci": "npm run test:unit --reporters=default",
    "test:cov": "npm run test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm run test --config './jest.e2e.config.js'",
    "test:unit": "npm run test --config './jest.config.js'",
    "test:watch": "npm run test --watch"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@nestjs/common": "^11.1.8",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.8",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.8",
    "@nestjs/swagger": "^11.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "nestjs-pino": "^4.4.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "serve-favicon": "^2.5.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.8",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.1",
    "@swc/jest": "^0.2.39",
    "@tsconfig/node22": "^22",
    "@types/express": "^5",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24",
    "@types/passport-jwt": "^4.0.1",
    "@types/serve-favicon": "^2.5.7",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "30.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "packageManager": "pnpm@10.21.0"
}
